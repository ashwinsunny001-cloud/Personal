  background: linear-gradient(135deg, #2b1055, #7597de);
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-family: Arial, sans-serif;
  overflow: hidden;
  text-align: center;
  color: white;
}

h1 {
  font-size: 42px;
  text-shadow: 0 0 20px rgba(255,255,255,0.8);
}

button {
  padding: 15px 30px;
  font-size: 18px;
  border: none;
  border-radius: 30px;
  background: linear-gradient(45deg, #ff00cc, #3333ff);
  color: white;
  cursor: pointer;
  margin-top: 20px;
}

#countdown {
  font-size: 50px;
}

/* Floating hearts */
.heart {
  position: fixed;
  bottom: -10px;
  animation: floatUp 5s linear forwards;
  pointer-events: none;
}

@keyframes floatUp {
  0% { transform: translateY(0) scale(1); opacity: 1; }
  100% { transform: translateY(-100vh) scale(1.6); opacity: 0; }
}

/* Sparkle stars */
.star {
  position: fixed;
  width: 4px;
  height: 4px;
  background: white;
  border-radius: 50%;
  animation: twinkle 2s infinite alternate;
}

@keyframes twinkle {
  from { opacity: 0.3; }
  to { opacity: 1; }
}

.confetti {
  position: fixed;
  width: 8px;
  height: 8px;
  top: 0;
  animation: fall 3s linear forwards;
}

@keyframes fall {
  to {
    transform: translateY(100vh) rotate(720deg);
    opacity: 0;
  }
}
